<section>
    <div class="container">

        <div class="row mt-4">

           <div class="col-10"></div>
            <a href="admin/add-products" class="btn btn-success col-2"> add item</a>
            

        </div>

        <table class="table table-success mt-5">
            <thead>
                <tr>
                    <th scope="col">no</th>
                    <th scope="col">image</th>
                    <th scope="col">name</th>
                    <th scope="col">catagory</th>
                    <th scope="col">price</th>
                    <th scope="col">description</th>

                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row"></th>

                    <td> <img src=" {{image}}" style="width:50px; height:50px" alt=""> </td>
                    <td>{{name}}</td>
                    <td>{{catagory}}</td>
                    <td>{{price}}</td>
                    <td>{{description}}</td>
                </tr>
                {{/each}}


            </tbody>
        </table>

    </div>
</section>